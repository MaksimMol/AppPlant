<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.plant_app.controller.HelloController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Поиск:"/>
        <TextField fx:id="searchField" promptText="Название, тип, симптомы..." HBox.hgrow="ALWAYS"/>
        <Button text="Сброс" onAction="#handleReset"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Источник данных:"/>
        <ComboBox fx:id="dataSourceComboBox"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Фильтр по статусу:"/>
        <ComboBox fx:id="statusFilter"/>
    </HBox>

    <TableView fx:id="tableView" prefHeight="350" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameCol" text="Название"/>
            <TableColumn fx:id="typeCol" text="Тип"/>
            <TableColumn fx:id="lastWateredCol" text="Последний полив"/>
            <TableColumn fx:id="nextWateringCol" text="Следующий полив"/>
            <TableColumn fx:id="statusCol" text="Статус"/>
            <TableColumn fx:id="nextRepotCol" text="Следующая пересадка"/>
            <TableColumn fx:id="diagnosisCol" text="Диагностика"/>
        </columns>
    </TableView>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Добавить" onAction="#handleAdd" maxWidth="120"/>
        <Button text="Редактировать" onAction="#handleEdit" maxWidth="120"/>
        <Button text="Удалить" onAction="#handleDelete" maxWidth="120"/>
        <Button text="Полив произведён" onAction="#handleWater" maxWidth="150"/>
        <Button text="История полива" onAction="#handleShowHistory" maxWidth="120"/>
    </HBox>

</VBox>
